@model CommentViewModel

<form action="@Url.Action("Show")#leave-a-comment" method="post">
    @Html.AntiForgeryToken()

    @if (Request.QueryString["commentSuccess"] == "True")
    {
        <div class="alert alert-success">
            Your comment has been added successfully!
        </div>
    }

    <div class="form-group">
        @Html.TextAreaFor(x => x.Content, new { @class = "form-control", rows = 3 })
        @Html.ValidationMessageFor(x => x.Content, null, new { @class = "text-danger" })
    </div>
    <button type="submit" class="btn btn-success">Submit</button>
</form>